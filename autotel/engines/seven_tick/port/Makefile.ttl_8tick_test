CC = gcc
CFLAGS = -O3 -march=native -I./include
LDFLAGS =

SRC = src/bitactor_80_20.c src/bitactor_ttl_compiler.c tests/test_ttl_8tick_compiler.c
OBJ = $(SRC:.c=.o)

TARGET = ttl_8tick_test

.PHONY: all clean test

all: $(TARGET)

$(TARGET): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^ $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

test: $(TARGET)
	./$(TARGET)

clean:
	rm -f $(OBJ) $(TARGET)